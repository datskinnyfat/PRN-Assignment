<Application x:Class="DatPhungWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DatPhungWPF.Converters"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Global Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#667eea"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#5a6fd8"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#764ba2"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27ae60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#f39c12"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e74c3c"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3498db"/>
        <SolidColorBrush x:Key="LightColor" Color="#f8f9fa"/>
        <SolidColorBrush x:Key="DarkColor" Color="#2c3e50"/>
        <SolidColorBrush x:Key="GrayColor" Color="#7f8c8d"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#bdc3c7"/>
        
        <!-- Global Button Style -->
        <Style x:Key="GlobalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Global TextBox Style -->
        <Style x:Key="GlobalTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayColor}"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Global DataGrid Style -->
        <Style x:Key="GlobalDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#ecf0f1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightColor}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>
        
        <!-- Global DataGrid Column Header Style -->
        <Style x:Key="GlobalColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource DarkColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Converters -->
        <converters:BookingStatusConverter x:Key="BookingStatusConverter"/>
        <converters:BookingTypeConverter x:Key="BookingTypeConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
        <converters:StatusToIndexConverter x:Key="StatusToIndexConverter"/>
        <converters:BookingStatusToIndexConverter x:Key="BookingStatusToIndexConverter"/>
        <converters:BookingTypeToIndexConverter x:Key="BookingTypeToIndexConverter"/>
        <converters:StringToTabIndexConverter x:Key="StringToTabIndexConverter"/>
        <converters:ArrayMultiConverter x:Key="ArrayMultiConverter"/>
    </Application.Resources>
</Application> 