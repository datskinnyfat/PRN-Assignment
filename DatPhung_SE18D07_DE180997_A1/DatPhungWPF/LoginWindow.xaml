<Window x:Class="DatPhungWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:DatPhungWPF.ViewModels"
        Title="FU Mini Hotel System - Login" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="30"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#764ba2"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#667eea" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5a6fd8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#667eea" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#667eea" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e74c3c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="20" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Hotel Image & Branding -->
            <Border Grid.Column="0" CornerRadius="20,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity="0.1"/>
                    </Grid.Background>
                    
                    <!-- Close Button -->
                    <Button Content="×" Style="{StaticResource CloseButtonStyle}" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Margin="0,20,20,0" Click="CloseButton_Click"/>
                    
                    <StackPanel VerticalAlignment="Center" Margin="40">
                        <TextBlock Text="🏨" FontSize="80" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Welcome Back!" Foreground="White" FontSize="32" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="FU Mini Hotel System" Foreground="White" FontSize="24" FontWeight="Light" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Sign in to access your premium hotel management dashboard" 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" Opacity="0.9"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Right Side - Login Form -->
            <Border Grid.Column="1" Background="White" CornerRadius="0,20,20,0">
                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="60,0">
                        <TextBlock Text="Sign In" Foreground="#2c3e50" FontSize="36" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,40"/>
                        
                        <TextBlock Text="Email Address" Foreground="#7f8c8d" FontSize="14" FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail" Style="{StaticResource ModernTextBoxStyle}" 
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Segoe UI"/>
                        
                        <TextBlock Text="Password" Foreground="#7f8c8d" FontSize="14" FontWeight="SemiBold" 
                                   Margin="0,20,0,5"/>
                        <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBoxStyle}"
                                     FontFamily="Segoe UI"/>
                        
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#e74c3c" TextWrapping="Wrap" 
                                   Margin="0,20,0,20" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                        
                        <Button Content="SIGN IN" Style="{StaticResource ModernButtonStyle}" 
                                Margin="0,10,0,20" Width="300">
                            <Button.CommandParameter>
                                <Binding ElementName="txtPassword"/>
                            </Button.CommandParameter>
                            <Button.Command>
                                <Binding Path="LoginCommand"/>
                            </Button.Command>
                        </Button>
                        
                        <Button Content="CANCEL" Margin="0,0,0,40" Width="300" Command="{Binding CancelCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Setter Property="Background" Value="#95a5a6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7f8c8d"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <TextBlock Text="© 2024 FU Mini Hotel System. All rights reserved." 
                                   Foreground="#bdc3c7" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window> 